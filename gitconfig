[alias]
	la = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls = "!git la -10"
	l = "!git ll -1"
	diffl = diff --cached HEAD^
	diffc = diff --cached
	s = stash list
	A = add -A .
